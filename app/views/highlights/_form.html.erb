<%= simple_form_for @highlight, :html => { :class => "form-horizontal highlight" } do |f| %>

    <%= f.error_notification %>
    <%= f.input :text %>
    <%= f.input :hostname %>
    <%= f.input :pathname %>
    <%= f.input :protocol %>
    <%= f.input :port %>
    <%= f.input :search %>
    <%= f.input :pathname_hash %>
    <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
    <%= f.error :base %>
    <%= f.button :submit %>

<% end %>
